@using MVC_KUTUPHANE.Models.Entity;
@model List<TBLDUYURULAR>
@{
    ViewBag.Title = "Duyurular";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Duyurular</h2>

<table class="table table-bordered ">
    <tr>
        <th>Kategori</th>
        <th>Tarih</th>
        <th>İçerik</th>
    </tr>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.KATEGORI</td>
            <td>@Convert.ToDateTime(d.TARIH).ToString("dd/MM/yyyy")</td>
            <td>@d.ICERIK</td>
           
        </tr>
    }
</table>


